<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- underscore mapping -->
	<settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    
	<typeAliases>
		<!-- 표기는 관례상 모두 소문자로 표현 -->
		<typeAlias alias="sitevo" type="com.cafe24.mysite.vo.SiteVo" />
		<typeAlias alias="uservo" type="com.cafe24.mysite.vo.UserVo" />
		<typeAlias alias="guestbookvo" type="com.cafe24.mysite.vo.GuestbookVo" />
		<typeAlias alias="boardvo" type="com.cafe24.mysite.vo.BoardVo" />
		<typeAlias alias="filevo" type="com.cafe24.mysite.vo.FileVo" />
	</typeAliases>
	<mappers>
		<mapper resource="mybatis/mapper/site.xml" />
		<mapper resource="mybatis/mapper/user.xml" />
		<mapper resource="mybatis/mapper/guestbook.xml" />
		<mapper resource="mybatis/mapper/board.xml" />
		<mapper resource="mybatis/mapper/file.xml" />
		
	</mappers>
</configuration>
